#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(0));
    int m = 6, n = 4;
    int arr[m][n];

    for(int i = 0; i < m; i++)
        for(int j = 0; j < n; j++)
            arr[i][j] = rand() % 21;

    cout << "Array:\n";
    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++)
            cout << arr[i][j] << " ";
        cout << endl;
    }

    for(int j = 0; j < n; j++) {
        int count = 0;
        for(int i = 0; i < m; i++)
            if(arr[i][j] % 2 == 0) count++;
        cout << "Column " << j << ": " << count << " even numbers" << endl;
    }

    return 0;
}

3 завдання:

#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(0));
    int m = 5, n = 7;
    int arr[m][n];

    for(int i = 0; i < m; i++)
        for(int j = 0; j < n; j++)
            arr[i][j] = rand() % 21;

    cout << "Array:\n";
    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++)
            cout << arr[i][j] << " ";
        cout << endl;
    }

    for(int i = 0; i < m; i++) {
        int sum = 0;
        for(int j = 0; j < n; j++)
            sum += arr[i][j];
        cout << "Sum of row " << i << " = " << sum << endl;
    }

    return 0;
}

