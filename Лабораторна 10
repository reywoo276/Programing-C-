1 завдання:

#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(0));
    int m = 4, n = 3;
    int arr[m][n];

    for(int i = 0; i < m; i++)
        for(int j = 0; j < n; j++)
            arr[i][j] = rand() % 21;

    cout << "Array:\n";
    for(int i = 0; i < m; i++) {
        for(int j = 0; j < n; j++)
            cout << arr[i][j] << " ";
        cout << endl;
    }

    for(int i = 0; i < m; i++) {
        int count = 0;
        for(int j = 0; j < n; j++)
            if(arr[i][j] % 2 == 0) count++;
        cout << "Row " << i << ": " << count << " even numbers" << endl;
    }

    return 0;
}

