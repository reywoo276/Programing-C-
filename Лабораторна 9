3 завдання:

#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(NULL)); 

    const int n = 10;
    int arr[n];

    cout << "Initial array: ";
    for (int i = 0; i < n; i++) {
        arr[i] = rand() % 41 - 20;
        cout << arr[i] << " ";
    }
    cout << endl;

    int minIndex = 0;
    int maxIndex = 0;

    for (int i = 1; i < n; i++) {
        if (arr[i] < arr[minIndex]) {
            minIndex = i;
        }
        if (arr[i] > arr[maxIndex]) {
            maxIndex = i;
        }
    }

    int temp = arr[minIndex];
    arr[minIndex] = arr[maxIndex];
    arr[maxIndex] = temp;

    cout << "Array after swapping min and max elements: ";
    for (int i = 0; i < n; i++) {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
4 завдання:

#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(NULL));

    const int n = 10;
    int arr[n];

    // Fill the array with random numbers
    cout << "Array: ";
    for (int i = 0; i < n; i++) {
        arr[i] = rand() % 41 - 20; // [-20; 20]
        cout << arr[i] << " ";
    }
    cout << endl;

    int A;
    cout << "Enter number A: ";
    cin >> A;

    int countGreater = 0;
    for (int i = 0; i < n; i++) {
        if (arr[i] > A) {
            countGreater++;
        }
    }

    cout << "Number of elements greater than " << A << ": " << countGreater << endl;

    return 0;
}
5 завдання: 

#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(NULL));

    const int n = 10;
    int arr[n];

    // Fill the array with random numbers
    cout << "Array: ";
    for (int i = 0; i < n; i++) {
        arr[i] = rand() % 41 - 20; // [-20; 20]
        cout << arr[i] << " ";
    }
    cout << endl;

    // Assume n >= 2
    int max1, max2;

    // Initialize max1 and max2 using the first two elements
    if (arr[0] > arr[1]) {
        max1 = arr[0];
        max2 = arr[1];
    } else {
        max1 = arr[1];
        max2 = arr[0];
    }

    // Traverse the rest of the array
    for (int i = 2; i < n; i++) {
        if (arr[i] > max1) {
            // arr[i] becomes the largest, old largest becomes second largest
            max2 = max1;
            max1 = arr[i];
        } else if (arr[i] > max2) {
            // arr[i] is between max1 and max2
            max2 = arr[i];
        }
    }

    cout << "Largest element: " << max1 << endl;
    cout << "Second largest element: " << max2 << endl;

    return 0;
}
6 завдання:

#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main() {
    srand(time(NULL));

    const int n = 10;
    int arr[n];

    // Fill the array with random numbers in range [-3; 3]
    cout << "Array: ";
    for (int i = 0; i < n; i++) {
        arr[i] = rand() % 7 - 3; // -3, -2, -1, 0, 1, 2, 3
        cout << arr[i] << " ";
    }
    cout << endl;

    int firstZeroIndex = -1;

    for (int i = 0; i < n; i++) {
        if (arr[i] == 0) {
            firstZeroIndex = i;
            break; // first zero found, stop
        }
    }

    if (firstZeroIndex == -1) {
        cout << "The array does not contain any zero elements." << endl;
    } else {
        cout << "The first zero element has index " << firstZeroIndex 
             << " (position " << firstZeroIndex + 1 << " if counting from 1)." << endl;
    }

    return 0;
}
