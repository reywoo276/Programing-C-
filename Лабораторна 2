1 завдання:

#include <iostream>
#include <cmath>

using namespace std;

int main() {
    double x, Z;

    cout << "Input x: ";
    cin >> x;

    if (x >= 0) {
        Z = cos(x) - pow(sin(x), 3);
    } else {
        Z = x * exp(-x) + 1 / (x - 1.3);
    }

    cout << "Z = " << Z << endl;

    return 0;
}


2 завдання:

#include <iostream>
using namespace std;

int main() {
    double x, y;

    cout << "Enter x: ";
    cin >> x;
    cout << "Enter y: ";
    cin >> y;

    bool inArea =
        (x >= -1 && x <= 0 && y >= 0 && y <= 1) ||
        (x >= 0 && x <= 1 && y >= -1 && y <= 0);

    if (inArea) {
        cout << "The point belongs to the shaded area" << endl;
    } else {
        cout << "The point does NOT belong to the shaded area" << endl;
    }

    return 0;
}

