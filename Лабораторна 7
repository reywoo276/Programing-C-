2.6 завдання:

#include <iostream>
using namespace std;

int main() {
    long long c0;
    cout << "Enter a natural number: ";
    cin >> c0;

    if (c0 <= 0) {
        cout << "Invalid input" << endl;
        return 0;
    }

    int steps = 0;

    while (c0 != 1) {
        if (c0 % 2 == 0) {
            c0 = c0 / 2;
        } else {
            c0 = 3 * c0 + 1;
        }

        cout << c0 << endl;  
        steps++;
    }

    cout << "Steps = " << steps << endl;

    return 0;
}

2.7 завдання:

#include <iostream>

using namespace std;

int main(void) {
    double pi4 = 0.0;
    long   n;

    cout << "Number of iterations? ";
    cin >> n;

    double sign = 1.0;
    for (long i = 0; i < n; i++) {
        long den = 2 * i + 1;
        pi4 += sign * (1.0 / den);
        sign = -sign;
    }

    cout.precision(20);
    cout << "Pi = " << (pi4 * 4.) << endl;
    return 0;
}

2.10 завдання:

#include <iostream>
using namespace std;

int main() {
    const int MAX_N = 50;

    int n;
    cout << "Enter side size n (>1): ";
    cin >> n;

    if (!cin) {
        cout << "Input error: not an integer" << endl;
        return 0;
    }

    if (n <= 1) {
        cout << "The side size must be greater than 1" << endl;
        return 0;
    }

    if (n > MAX_N) {
        cout << "Sorry, the side size is too big" << endl;
        return 0;
    }
    
    cout << '+';
    for (int i = 0; i < n - 2; i++)
        cout << '-';
    cout << '+' << endl;

    for (int i = 0; i < n - 2; i++) {
        cout << '|';
        for (int j = 0; j < n - 2; j++)
            cout << ' ';
        cout << '|' << endl;
    }

    cout << '+';
    for (int i = 0; i < n - 2; i++)
        cout << '-';
    cout << '+' << endl;

    return 0;
}
